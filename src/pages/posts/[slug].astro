---
import BaseLayout from "src/layouts/BaseLayout.astro";
import Comments from "@components/Comments";
import { formatDate } from "src/lib/utils";
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import styles from "src/styles/CodeBlock.module.css";

export async function getStaticPaths() {
  const allPosts = await getCollection("posts");

  return allPosts.map((post) => ({
    params: { slug: post.slug },
    props: {
      post,
    },
  }));
}

const { post } = Astro.props as any;
const { Content } = await post.render();
---

<BaseLayout
  style={styles}
  pageTitle={post.data.title}
  pageSlug={post.slug}
  category="posts"
>
  <div class="-z-10">
    {
      post.data.imageSrc ? (
        <Image
          src={post.data.imageSrc}
          alt={post.data.imageAlt}
          quality={"low"}
          class="mt-6"
        />
      ) : null
    }
    <div transition:name={`${post.slug}-container`}>
      <h1 class="mt-12 text-3xl font-semibold" id="postTitle">
        {post.data.title}
      </h1>
      {
        post.data.date && (
          <span class="font-mono text-xs text-gray-6 lowercase">
            posted {formatDate(post.data.date, "long")}
          </span>
        )
      }
    </div>
    <div
      id="content"
      class="prose text-foreground mx-auto mb-12 mt-8"
    >
      <Content />
    </div>
    <div class="pb-4">
      <Comments client:idle />
    </div>
  </div>
</BaseLayout>

<style>
  #postTitle {
    text-wrap: balance;
  }

  #content {
    --tw-prose-links: rgb(var(--primary));
    --tw-prose-headings: rgb(var(--foreground));
    --tw-prose-code: rgb(var(--primary));

  }
</style>
