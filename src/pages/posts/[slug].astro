---
import { getCollection } from "astro:content";

import BaseLayout from "../../layouts/BaseLayout.astro";
import styles from '../../styles/CodeBlock.module.css'

export async function getStaticPaths() {
  const allPosts = await getCollection("posts")

  return allPosts.map((post) => ({
    params: { slug: post.slug },
    props: {
      post,
    }
  }))
}

const { post } = Astro.props;
const {Content} = await post.render()
---

<BaseLayout style={styles} pageTitle={post.data.title}>
  <div>
    {post.image ? <img src={post.image.src} alt={post.image.alt} /> : <></> }
    <h1 class={post.image ? '' : 'title'}>{post.data.title}</h1>
    {post.data.date ? <p class="pub-date">{post.data.date}</p> : <></>}
    <hr />
    <div class="content">
      <Content />
    </div>
  </div>
</BaseLayout>

<style>
  .pub-date {
    color: rgb(26, 30, 43);
    font-style: italic;
    margin-top: 0.5rem;
  }

  :global(.dark) .pub-date {
    color: rgb(200, 200, 200);
  }

  h1 {
    margin-top: 1rem;
    line-height: 1;
  }

  img,
  .title {
    margin-top: 3rem;
  }

  .content {
    margin-top: 2rem;
  }

  @media (min-width: 40rem) {
    img,
    .title {
      margin-top: 6rem;
    }
  }
</style>