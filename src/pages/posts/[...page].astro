---
import BaseLayout from "src/layouts/BaseLayout.astro";
import { formatBlogPost } from "src/lib/utils";
import { getCollection } from "astro:content";
import Post from "@components/Post.astro";
import Pagination from "@components/Pagination.astro";

export async function getStaticPaths({ paginate }) {
  const allPosts = await getCollection("posts");
  const formattedPosts = formatBlogPost(allPosts);

  console.log(paginate(formattedPosts, { pageSize: 4 }));
  return paginate(formattedPosts, {
    pageSize: 4,
  });
}

const pageTitle = "Trevor Lee | All Posts";

const { page } = Astro.props as any;
---

<BaseLayout pageTitle={pageTitle} category="posts">
  <div>
    <span
      class="mt-12 flex border-b border-gray-5 py-2 font-mono dark:border-gray-9"
    >
      <span class="w-28 opacity-70">date</span><span class="opacity-80"
        >title</span
      >
    </span>
    <ul>
      {
        page.data.map((post) => (
          <Post
            date={post.data.date}
            href={post.slug}
            title={post.data.title}
            description={post.data.description}
          />
        ))
      }
    </ul>
  </div>
  <div>
    <Pagination prevUrl={page.url.prev} nextUrl={page.url.next} />
  </div>
</BaseLayout>
