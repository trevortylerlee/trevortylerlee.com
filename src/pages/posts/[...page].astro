---
import { getCollection } from "astro:content";

import BaseLayout from "../../layouts/BaseLayout.astro";
import MorePost from "../../components/MorePost.astro";
import Pagination from "../../components/Pagination.astro";

import { formatBlogPost } from "../../lib/utils";

export async function getStaticPaths({ paginate }) {
  const allPosts = await getCollection("posts");
  const formattedPosts = formatBlogPost(allPosts);

  return paginate(formattedPosts, {
    pageSize: 4,
  });
}

const pageTitle = "Trevor Lee | All Posts";

const { page } = Astro.props;
---

<BaseLayout pageTitle={pageTitle} category="posts">
  <div class="mx-auto grid max-w-screen-md py-8">
    {
      page.data.map((post) => (
        <MorePost
          date={post.data.date}
          href={post.slug}
          title={post.data.title}
          description={post.data.description}
        />
      ))
    }
  </div>
  <div>
    <Pagination prevUrl={page.url.prev} nextUrl={page.url.next} />
  </div>
</BaseLayout>
