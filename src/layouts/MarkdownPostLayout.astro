---
import BaseLayout from "./BaseLayout.astro";
import styles from './../styles/CodeBlock.module.css'

const { frontmatter } = Astro.props;
---

<BaseLayout style={styles} pageTitle={frontmatter.title}>
  <div>
    {frontmatter.image ? <img src={frontmatter.image.url} alt={frontmatter.image.alt} /> : <></> }
    <h1 class={frontmatter.image ? '' : 'title'}>{frontmatter.title}</h1>
    {frontmatter.pubDate ? <p class="pub-date">{frontmatter.pubDate}</p> : <></>}
    <hr />
    <div class="content">
      <slot />
    </div>
  </div>
</BaseLayout>

<style>
  .pub-date {
    color: rgb(26, 30, 43);
    font-style: italic;
    margin-top: 0.5rem;
  }

  :global(.dark) .pub-date {
    color: rgb(200, 200, 200);
  }

  h1 {
    margin-top: 1rem;
    line-height: 1;
  }

  img,
  .title {
    margin-top: 3rem;
  }

  .content {
    margin-top: 2rem;
  }

  @media (min-width: 40rem) {
    img,
    .title {
      margin-top: 6rem;
    }
  }
</style>