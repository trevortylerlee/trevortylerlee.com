    9: "gyarados",
    10: "aerodactyl",
    11: "lugia",
    12: "tympole",
    13: "hoppip",
    14: "stunfisk",
    15: "combee",
    16: "geodude",
    17: "ghastly",
    18: "swablu",
    19: "porygon-z",
    20: "magikarp",
    21: "drifloon",
    22: "beedrill",
    23: "druddigon",
  };

  const d = new Date();
  let hour = d.getUTCHours();
  let pokemon = possiblePokemon[hour];

  let marq = document.getElementById("marq");
  marq.innerHTML = `<img src=${`/pokemon/${pokemon}.gif`} alt=${`${pokemon}`} />`;
</script>
