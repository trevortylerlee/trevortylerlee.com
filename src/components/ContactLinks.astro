---
import { Icon } from "astro-icon/components";

const contactLinks = [
  {
    href: "mailto:trevortylerlee@gmail.com",
    title: "Email",
    icon: "paper-plane",
  },
  {
    href: "https://github.com/trevortylerlee",
    title: "GitHub",
    icon: "github",
  },
  {
    href: "https://www.linkedin.com/in/trevortylerlee/",
    title: "LinkedIn",
    icon: "linkedin",
  },
  {
    href: "https://twitter.com/trevortylerlee",
    title: "X (Twitter)",
    icon: "twitter",
  },
];
---

<div class="grid grid-cols-2 gap-3 sm:flex sm:justify-evenly sm:gap-2">
  {
    contactLinks.map((link) => {
      return (
        <div class="flex items-center gap-2">
          <Icon name={link.icon} class=`text-text ${link.icon === "paper-plane" ? "-rotate-45" : ""}` />
          <a href={link.href} class="link">
            {link.title}
          </a>
        </div>
      );
    })
  }
</div>
