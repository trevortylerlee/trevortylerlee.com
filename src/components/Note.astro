---
const { emoji, type } = Astro.props;
---

<div class={`p-4 flex ${type}`}>
  <div>
    <p class="emoji">{emoji}</p>
  </div>
  <div>
    <slot />
  </div>
</div>

<style>
  .note {
    padding: 0.1em 0.5em;
    border-radius: 8px;
    display: flex;
  }

  .secondary {
    color: #888888;
    border: 1px solid #888888;
  }

  .technology {
    /* background: #151e36; */
    color: #0070f3;
    border: 1px solid #0070f3;
  }

  .warning {
    color: #eaaa45;
    border: 1px solid #eaaa45;
  }

  .emoji {
    position: relative;
    vertical-align: text-top;
    left: 0.25em;
    margin-right: 1em;
  }

  .string {
    position: relative;
    left: 1rem;
  }
</style>
