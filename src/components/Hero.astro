---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import {
  DescriptionDetails,
  DescriptionList,
  DescriptionTerm,
} from "@components/ui/description-list";
import profilePicture from "@assets/me-with-roxy.jpg";

const socials = [
  {
    label: "Email",
    details: "trevortylerlee@gmail.com",
    href: "mailto:trevortylerlee@gmail.com",
    icon: "mail",
  },
  {
    label: "Phone",
    details: "+1 778 235 3815",
    href: "tel:+17782353815",
    icon: "phone",
  },
  {
    label: "GitHub",
    details: "@trevortylerlee",
    href: "https://github.com/trevortylerlee",
    icon: "github",
  },
  {
    label: "LinkedIn",
    details: "@trevortylerlee",
    href: "https://www.linkedin.com/in/trevortylerlee/",
    icon: "linkedin",
  },
  {
    label: "Instagram",
    details: "@trevortylerlee",
    href: "https://www.instagram.com/trevortylerlee",
    icon: "instagram",
  },
  {
    label: "Twitter",
    details: "@boogerbuttcheek",
    href: "https://twitter.com/boogerbuttcheek",
    icon: "twitter",
  },
];
---

<section>
  <div class="flex">
    <div class="group mr-3 flex items-center sm:mr-5">
      <div
        class="avatar relative inline-flex h-12 w-12 items-center justify-center overflow-hidden rounded-xl"
      >
        <Image
          src={profilePicture}
          alt="Me and my dog Roxy"
          width={64}
          height={64}
          format="avif"
          quality="high"
          loading="eager"
          draggable="false"
        />
        <div
          class="avatar absolute inset-0 flex h-full w-full justify-center [transform:skew(-12deg)_translateX(-100%)] group-hover:duration-500 group-hover:[transform:skew(-12deg)_translateX(100%)]"
        >
          <div class="relative h-full w-8 bg-white/20"></div>
        </div>
      </div>
    </div>
    <div class="grid">
      <h1 class="text-2xl font-semibold">Trevor Lee</h1>
      <span class="text-sm text-textVariant"
        >Frontend Developer <span class="text-lg">â‹†</span> Vancouver, Canada</span
      >
    </div>
  </div>
  <span class="mt-4 block text-textVariant"
    >Building websites with React and Node.js since 2020. Passionate about
    designing interfaces and crafting detailed, accessible experiences on the
    web.
  </span>
</section>
<section class="mt-12">
  <DescriptionList>
    {
      socials.map(({ label, details, href, icon }) => (
        <>
          <DescriptionTerm className="flex items-center gap-1 sm:gap-2">
            <Icon name={icon} />
            {label}
          </DescriptionTerm>
          <DescriptionDetails className="flex items-center gap-1">
            <div class="flex items-center gap-1">
              <a href={href} class="link">
                {details}
              </a>
              <Icon name="external" />
            </div>
          </DescriptionDetails>
        </>
      ))
    }

