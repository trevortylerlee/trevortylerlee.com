---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import {
  DescriptionDetails,
  DescriptionList,
  DescriptionTerm,
} from "@components/ui/description-list";
import profilePicture from "@assets/me-and-roxy.png";
import instagramLogo from "@assets/instagram.png";

const socials = [
  {
    label: "Email",
    details: "trevortylerlee@gmail.com",
    href: "mailto:trevortylerlee@gmail.com",
    icon: "mail",
  },
  {
    label: "Phone",
    details: "+1 778 235 3815",
    href: "tel:+17782353815",
    icon: "phone",
  },
  {
    label: "GitHub",
    details: "@trevortylerlee",
    href: "https://github.com/trevortylerlee",
    icon: "github",
  },
  {
    label: "LinkedIn",
    details: "@trevortylerlee",
    href: "https://www.linkedin.com/in/trevortylerlee/",
    icon: "linkedin",
  },
  {
    label: "X (Twitter)",
    details: "@boogerbuttcheek",
    href: "https://twitter.com/boogerbuttcheek",
    icon: "twitter",
  },
];

const instagram = {
  label: "Instagram",
  details: "@trevortylerlee",
  href: "https://www.instagram.com/trevortylerlee",
  icon: instagramLogo,
};

const colorVariants = {
  mail: "text-orange-7 dark:text-orange-6",
  phone: "text-green-7 dark:text-green-3",
  github: "text-text",
  linkedin: "",
  instagram: "",
  twitter: "",
};
---

<section>
  <div class="flex">
    <div class="group mr-2 flex items-center sm:mr-3">
      <div
        class="avatar relative inline-flex h-12 w-12 items-center justify-center overflow-hidden rounded-xl"
      >
        <Image
          src={profilePicture}
          alt="Me and my dog Roxy"
          width={72}
          height={72}
          format="avif"
          quality="high"
          loading="eager"
          draggable="false"
        />
        <div
          class="avatar absolute inset-0 flex h-full w-full justify-center delay-200 [transform:skew(-12deg)_translateX(-100%)] group-hover:duration-500 group-hover:[transform:skew(-12deg)_translateX(100%)]"
        >
          <div class="relative h-full w-8 bg-white/20"></div>
        </div>
      </div>
    </div>
    <div class="grid">
      <h1 class="text-lg font-medium">Trevor Tyler Lee</h1>
      <span class="-mt-2 text-sm text-textVariant"
        >Frontend Developer <span class="text-lg">â‹†</span> Vancouver, Canada</span
      >
    </div>
  </div>
</section>
<section class="mt-12">
  <DescriptionList>
    {
      socials.map(({ label, details, href, icon }) => (
        <>
          <DescriptionTerm className="flex items-center gap-1 sm:gap-2">
            <Icon name={icon} class={`${colorVariants[icon]} size-3`} />
            {label}
          </DescriptionTerm>
          <DescriptionDetails className="flex items-center gap-1">
            <div class="flex items-center gap-1">
              <a href={href} class="link">
                {details}
              </a>
              <Icon name="external" />
            </div>
          </DescriptionDetails>
        </>
      ))
    }
    <DescriptionTerm className="flex items-center gap-1 sm:gap-2">
      <Image
        src={instagram.icon}
        width={24}
        height={24}
        format="avif"
        quality="low"
        loading="eager"
        alt="Instagram"
        class="size-3"
      />
      {instagram.label}
    </DescriptionTerm>
    <DescriptionDetails className="flex items-center gap-1">
      <div class="flex items-center gap-1">
        <a href={instagram.href} class="link">
          {instagram.details}
        </a>
        <Icon name="external" />
      </div>
    </DescriptionDetails>
  </DescriptionList>
</section>
