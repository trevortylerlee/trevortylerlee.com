---
import { ArrowRight, ArrowLeft } from "lucide-react";

const { prevUrl, nextUrl } = Astro.props;
---

<nav aria-label="Posts Navigation" class="">
  {
    prevUrl && (
      <span class="flex">
        <a
          class="exempt-link mb-8 mt-8 flex p-2 no-underline hover:bg-neutral-200 dark:hover:bg-neutral-800"
          href={prevUrl}
          aria-label="Newer Posts"
        >
          <ArrowLeft size={16} className={"mr-1 self-center"} />
          <span>Newer Posts</span>
        </a>
      </span>
    )
  }
  {
    nextUrl && (
      <span class="flex justify-end">
        <a
          class="exempt-link mb-8 mt-8 flex p-2 no-underline hover:bg-neutral-200 dark:hover:bg-neutral-800"
          href={nextUrl}
          aria-label="Older Posts"
        >
          Older Posts
          <ArrowRight size={16} className={"ml-1 self-center"} />
        </a>
      </span>
    )
  }
</nav>
