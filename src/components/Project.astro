<li class="relative">
  <a
    class="block h-full group w-full overflow-hidden rounded-2xl ring-2 ring-foreground/10 hover:bg-gray-2 dark:hover:bg-gray-10 focus:bg-gray-2 dark:focus:bg-gray-10"
    href={href}
    ><span class="-mb-3 block h-[12em] w-full overflow-hidden rounded-t-xl p-2"
      ><Image
        alt="ENS Data"
        width="640"
        height="480"
        class="h-full rounded-lg rounded-t-2xl object-cover ring-2 ring-foreground/10 transition-transform"
        src={src}
      /></span
    ><h3 class="block px-3.5 pt-4 font-bold uppercase">{title}</h3><p
      class="mt-1 block text-gray-6 border-b-transparent px-3.5 pb-5 pr-4 group-hover:text-foreground group-focus:text-foreground"
    >
      {description}
    </p><span class="block pb-4">
      {
        online ? (
          <div class="absolute bottom-3 right-5 flex items-center gap-1">
            <div class="h-[8px] w-[8px] bg-green-500 rounded-full"></div>
            <span class="font-mono text-xs text-gray-6">online</span>
          </div>
        ) : (
        <div class="absolute bottom-3 right-5 flex items-center gap-1 text-red-500 ">
          <div class="h-[8px] w-[8px] bg-red-500 rounded-full"></div>
          <span class="font-mono text-xs text-gray-6">offline</span>
        </div>
        )
      }
    </span></a
  >
</li>

<style>
  a {
    text-decoration: none;
  }
</style>
