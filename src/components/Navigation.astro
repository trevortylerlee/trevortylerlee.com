  <style>
    .dark,
    .light {
      pointer-events: none;
    }

    .dark.animate {
      animation: themeToggleBackwards 200ms ease-out forwards;
      transition: 0.15s ease-in;
    }

    .light.animate {
      animation: themeToggleForwards 200ms ease-out forwards;
      transition: 0.15s ease-in;
    }

    @keyframes themeToggleForwards {
      0% {
        transform: rotate(-60deg);
        scale: 1;
      }

      50% {
        scale: 1.2;
      }

      100% {
        transform: rotate(0deg);
        scale: 1;
      }
    }

    @keyframes themeToggleBackwards {
      0% {
        transform: rotate(60deg);
        scale: 1;
      }

      50% {
        scale: 1.2;
      }

      100% {
        transform: rotate(0deg);
        scale: 1;
      }
    }
  </style>
