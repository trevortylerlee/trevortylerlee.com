---
import ThemeToggle from "./ThemeToggle.tsx";
import PrimarySelector from "./PrimarySelector.tsx";
---

    <nav
      aria-label="Main Navigation"
      class="h-13 flex justify-between py-4 align-middle font-content"
    >
      <span class="flex text-center">
        <a
          class="p-2 text-xl font-medium hover:bg-primary/50 hover:text-content"
          href="/"
          aria-label="Go to homepage"
        >
          trevortylerlee.com
        </a>
      </span>
      <span class="flex items-center gap-2">
        <span class="h-11 w-11">
          <PrimarySelector client:load/>
        </span>
        <span class="h-11 w-11">
          <ThemeToggle client:only/>
        </span>
      </span>
    </nav>
